/* pages/play/play.wxss */

.list {
    position: relative;
    left: 0;
    top: 0;
    width: 100vw;
    height: 64vw;
}

image {
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 100vw;
    height: 64vw;

}

text {
    position: absolute;
    bottom: 35px;
    left: 10px;
    font-size: 12px;
    color: #fff;
    filter: brightness(0.8);
}

.text {
    position: absolute;
    bottom: 10px;
    left: 10px;
    font-size: 16px;
    font-weight: 700;
    color: #fff;
}