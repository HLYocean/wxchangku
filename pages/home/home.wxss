/* pages/home/home.wxss */
.home .weui-input {
  margin: 0 auto;
  border-radius: 5px;
  width: 96%;
  text-align: center;
  height: 30px;
  font-size: 14px;
  color: #000;
  background-color: rgba(0, 0, 0, 0.3);
}

.home .banner {
  margin-top: 10px;
}

.home .banner swiper {
  width: 100%;
  height: 400rpx;
}

.home .banner swiper image {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  width: 100%;
}

.contentBottom {
  /* height: 580rpx; */
}

.contentBottom .selection_title {
  text-align: center;
  padding: 10px;
}

.contentBottom image {
  width: 100%;
  filter: brightness(0.8);
}

.contentBottom .text {
  height: 468rpx !important;
  position: relative;
}

.contentBottom .title {
  position: absolute;
  left: 10px;
  bottom: 20px;
  color: #fff;
}